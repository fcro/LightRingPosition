<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffecfaff"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Light Ring Position"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bienvenue"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/profil" />

    <TextView
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Viens on est bien!!!"
        android:id="@+id/textView5"
        android:layout_weight="0.34" />

    <Button
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:text="Parties en cours"
        android:id="@+id/button2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parties précédentes"
        android:id="@+id/button3" />

    <Button
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:text="tchater"
        android:id="@+id/button4" />

    <Button
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:text="Gestion d&apos;amis"
        android:id="@+id/button5"
        android:onClick="amis" />

    <Button
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:text="Top scores"
        android:id="@+id/button6"
        android:onClick="affichageScores" />

</LinearLayout>